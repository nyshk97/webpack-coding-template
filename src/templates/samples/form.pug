extends ../_layout
block locals
  - let title = 'Sample of form'
block content
  main.main
    .container
      form.form(action="#")
        .form__group
          label(for="name").form__itemname 名前
          input(type="text" name="name" required autofocus placeholder="佐藤太郎").form__txt
        .form__group
          label(for="email").form__itemname メールアドレス
          input(type="text" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" placeholder="sato@example.com").form__txt
        .form__group.-inline
          label(for="phone").form__itemname 電話番号
          input(type="tel" name="phone" pattern="^0\d{9,10}$" placeholder="09011112222").form__txt
        .form__group.-inline
          label(for="pw").form__itemname パスワード
          input(type="password" name="pw" required minlength="8" placeholder="半角英数字8文字以上").form__txt
        .form__group.-inline
          label.form__itemname(for="date") 日付
          .form__content
            input(type="date").form__txt
        .form__group.-inline
          p.form__itemname 性別
          .form__content
            input(type="radio" name='gender')#radio1.form__radio
            label(for="radio1") 男
            input(type="radio" name='gender')#radio2.form__radio
            label(for="radio2") 女
        .form__group.-inline
          p.form__itemname 趣味
          .form__content
            input(type="checkbox")#baseball.form__check
            label(for="baseball") 野球
            input(type="checkbox")#soccer.form__check
            label(for="soccer") サッカー
            input(type="checkbox")#basket.form__check
            label(for="basket") バスケ
        .form__group.-inline
          p.form__itemname 都道府県
          .form__content
            .form__select
              select(name="prefecture")
                option(value="東京都") 東京都
                option(value="神奈川県") 神奈川県
                option(value="千葉県") 千葉県
                option(value="埼玉県") 埼玉県
        .form__group.-inline
          p.form__itemname 画像
          //要jQuery
          .form__content
            .form__file
              input(type="file" name="image" accept="image/png,image/jpeg,image/gif")#image1.file
              label(for="image1") ファイルを選択
        .form__group.-last
          label(for="content").form__itemname 問合せ内容
          textarea(name="content" cols="30" rows="10" placeholder="◯◯について知りたいです。").form__txt
        .form__group.-submit
          input(type="submit" value="送信").btn-submit